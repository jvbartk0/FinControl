<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fincontrol.controller.TransactionController">
    <children>
        <HBox styleClass="header">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Gerenciar Transações" styleClass="header-title" />
                        <Label text="Adicione, edite ou exclua transações" styleClass="header-subtitle" />
                    </children>
                </VBox>
                <Button fx:id="backButton" mnemonicParsing="false" text="Voltar" styleClass="back-button" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>

        <HBox styleClass="form-section">
            <children>
                <VBox styleClass="form-container" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Nova Transação" styleClass="form-section-title" />

                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Data" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label" />
                                <DatePicker fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="form-field" />

                                <Label text="Descrição" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label" />
                                <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="form-field" />

                                <Label text="Tipo" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label" />
                                <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-field" />

                                <Label text="Categoria" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label" />
                                <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="form-field" />

                                <Label text="Valor (R$)" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="form-label" />
                                <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="form-field" />
                            </children>
                        </GridPane>

                        <HBox spacing="10.0" styleClass="form-buttons">
                            <children>
                                <Button fx:id="addButton" mnemonicParsing="false" text="Adicionar" styleClass="primary-button" />
                                <Button fx:id="updateButton" mnemonicParsing="false" text="Atualizar" styleClass="secondary-button" />
                                <Button fx:id="deleteButton" mnemonicParsing="false" text="Excluir" styleClass="danger-button" />
                                <Button fx:id="clearButton" mnemonicParsing="false" text="Limpar" styleClass="secondary-button" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox styleClass="table-container" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Transações Existentes" styleClass="form-section-title" />
                        <TableView fx:id="transactionsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="dateColumn" text="Data" />
                                <TableColumn fx:id="descriptionColumn" text="Descrição" />
                                <TableColumn fx:id="typeColumn" text="Tipo" />
                                <TableColumn fx:id="categoryColumn" text="Categoria" />
                                <TableColumn fx:id="amountColumn" text="Valor" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
    </children>
</VBox>